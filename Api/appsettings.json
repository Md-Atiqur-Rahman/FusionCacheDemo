// File: appsettings.json
{
  "MongoDb": {
    "ConnectionString": "mongodb://admin:password123@localhost:27017",
    "DatabaseName": "FusionCacheDemo"
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379,abortConnect=false"
  },
  "Cache": {
    "DefaultDuration": "00:10:00",
    "FailSafeMaxDuration": "01:00:00",
    "FactorySoftTimeout": "00:00:00.500",
    "FactoryHardTimeout": "00:00:03",
    "EnableDistributedCache": true,
    "EnableBackplane": true,
    "EnableFailSafe": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "FusionCacheDemo": "Debug",
      "ZiggyCreatures.Caching.Fusion": "Debug"
    }
  },
  "AllowedHosts": "*"
}